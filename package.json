{
  "name": "wordpress-dev-kit-started",
  "private": false,
  "version": "0.0.4",
  "type": "module",
  "author": {
    "name": "Apros",
    "email": "huillca@apros.pe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oswaldohuillca/wp-dev-kit-started.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "zip": "npm run build && node archiver",
    "prepare": "husky",
    "release": "release-it"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.207",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/node": "^20.9.1",
    "@unocss/preset-typography": "^0.59.4",
    "@unocss/reset": "^0.60.2",
    "archiver": "^6.0.1",
    "browserslist": "^4.23.0",
    "husky": "^9.0.10",
    "lightningcss": "^1.24.1",
    "release-it": "^17.0.3",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "unocss": "^0.59.4",
    "unocss-preset-autoprefixer": "^0.0.7",
    "unocss-preset-calc": "^0.0.6",
    "vite": "^5.0.0",
    "vite-plugin-full-reload": "^1.1.0"
  },
  "dependencies": {
    "@splidejs/splide": "^4.1.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "github": {
        "release": true
      },
      "npm": {
        "publish": false
      },
      "plugins": {
        "@release-it/conventional-changelog": {
          "infile": "CHANGELOG.md"
        }
      }
    },
    "npm": {
      "publish": false
    }
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ],
  "files": [
    "api/**/*",
    "app/**/*",
    "dist/**/*",
    "partials/**/*",
    "public/**/*",
    "templates/**/*",
    "vendor/**/*",
    "footer.php",
    "functions.php",
    "header.php",
    "page.php",
    "screenshot.png",
    "style.css"
  ]
}